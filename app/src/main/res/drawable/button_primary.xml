<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="@color/primary_red_dark"
                        android:endColor="@color/primary_red"
                        android:angle="135" />
                    <corners android:radius="@dimen/button_corner_radius" />
                </shape>
            </item>
            <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="@color/primary_red"
                        android:endColor="@color/primary_red_dark"
                        android:angle="135" />
                    <corners android:radius="@dimen/button_corner_radius" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/text_secondary"
                android:endColor="@color/text_tertiary"
                android:angle="135" />
            <corners android:radius="@dimen/button_corner_radius" />
        </shape>
    </item>
    
    <!-- Normal state -->
    <item>
        <layer-list>
            <!-- Shadow -->
            <item android:top="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#20000000" />
                    <corners android:radius="@dimen/button_corner_radius" />
                </shape>
            </item>
            <!-- Button gradient -->
            <item android:bottom="2dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="@color/primary_red"
                        android:centerColor="@color/uae_red"
                        android:endColor="@color/primary_red_dark"
                        android:angle="135" />
                    <corners android:radius="@dimen/button_corner_radius" />
                    <stroke 
                        android:width="1dp" 
                        android:color="@color/primary_red_light" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>