    <style name="Theme.UAEPass" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_red</item>
        <item name="colorPrimaryVariant">@color/primary_red_dark</item>
        <item name="colorOnPrimary">@color/text_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_green</item>
        <item name="colorSecondaryVariant">@color/primary_green_dark</item>
        <item name="colorOnSecondary">@color/text_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Background colors for dark mode -->
        <item name="android:windowBackground">@color/uae_black</item>
        <!-- Customize your theme here. -->
    </style>
</resources>