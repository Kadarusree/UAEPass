<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_medium">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/padding_large"
            android:layout_marginBottom="@dimen/margin_large">

            <!-- UAE Pass Logo Placeholder with accent border -->
            <View
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/card_background"
                android:layout_marginBottom="@dimen/margin_medium" />

            <!-- Welcome Title with accent color -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_title"
                style="@style/TitleText"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="@dimen/margin_small" />

            <!-- Welcome Subtitle -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_subtitle"
                style="@style/SubtitleText"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="@dimen/margin_medium" />

        </LinearLayout>

        <!-- Login Options Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:cardBackgroundColor="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="@dimen/padding_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose Login Method"
                    android:textSize="@dimen/text_size_xlarge"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/margin_medium" />

                <!-- Login Buttons Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <!-- Mobile App Login Button -->
                    <Button
                        android:id="@+id/btnLogin"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height_large"
                        android:text="@string/app_login_button"
                        style="@style/ButtonPrimary"
                        android:layout_marginBottom="@dimen/margin_medium"
                        android:drawableStart="@android:drawable/ic_menu_compass"
                        android:drawablePadding="@dimen/padding_small"
                        android:gravity="center" />

                    <!-- Web Browser Login Button -->
                    <Button
                        android:id="@+id/WebLogin"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height_large"
                        android:text="@string/web_login_button"
                        style="@style/ButtonSecondary"
                        android:drawableStart="@android:drawable/ic_menu_search"
                        android:drawablePadding="@dimen/padding_small"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Status Card with accent styling -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:cardBackgroundColor="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_status_background"
                android:padding="@dimen/padding_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/authentication_status"
                    android:textSize="@dimen/text_size_xlarge"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/margin_small" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:background="@color/divider_accent"
                    android:layout_marginBottom="@dimen/margin_small" />

                <TextView
                    android:id="@+id/authStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/status_ready"
                    style="@style/StatusText"
                    android:textColor="@color/text_accent"
                    android:minHeight="48dp"
                    android:gravity="center_vertical"
                    android:background="@color/background_white"
                    android:padding="@dimen/padding_medium" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- WebView Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="@dimen/margin_large"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:cardBackgroundColor="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/card_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Authentication Browser"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:padding="@dimen/padding_medium"
                    android:background="@color/accent_blue_light" />

                <WebView
                    android:id="@+id/mWebView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- User Information Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:cardBackgroundColor="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="@dimen/padding_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_information"
                    android:textSize="@dimen/text_size_xlarge"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/margin_small" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:background="@color/divider"
                    android:layout_marginBottom="@dimen/margin_small" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@color/background_white">

                    <TextView
                        android:id="@+id/userInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No user information available"
                        style="@style/InfoText"
                        android:textColor="@color/text_secondary"
                        android:padding="@dimen/padding_medium"
                        android:gravity="top"
                        android:textIsSelectable="true" />

                </ScrollView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Footer with accent color -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/padding_large">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Powered by UAE Pass"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/text_accent"
                android:textStyle="bold"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>